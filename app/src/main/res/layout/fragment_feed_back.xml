<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freakstar.eyedoc.myapplication.activity.FeedBackFragment">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:id="@+id/table1">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70px"

                android:padding="5dip"
                android:background="#CCCCCC">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FeedBack Form"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#000000" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80px"
                android:gravity="center_horizontal"

                android:background="@color/border"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Name"

                    android:textSize="15sp"
                    android:textColor="@color/tabletext"
                    android:background="#FFFFFF"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginRight="0.25dp"
                    android:layout_marginBottom="0.25dp"

                    android:paddingTop="10dp"
                    android:paddingLeft="20dp" />
                <EditText
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"


                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="0.25dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="0.25dp"
                    android:paddingLeft="15dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80px"
                android:gravity="center_horizontal"

                android:background="@color/border"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Was Our App Helpful?"
                    android:textSize="15sp"
                    android:textColor="@color/tabletext"
                    android:background="#FFFFFF"
                    android:layout_marginTop="0.25dp"
                    android:layout_marginRight="0.25dp"
                    android:layout_marginBottom="0.25dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/Category"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="0.25dp"
                    android:layout_marginTop="0.25dp"
                    android:layout_marginLeft="0.25dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80px"
                android:gravity="center_horizontal"

                android:background="@color/border"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Rate Our App"
                    android:textSize="15sp"
                    android:textColor="@color/tabletext"
                    android:background="#FFFFFF"
                    android:layout_marginTop="0.25dp"
                    android:layout_marginRight="0.25dp"
                    android:layout_marginBottom="0.25dp"
                    android:paddingLeft="17dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/Date"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="0.25dp"
                    android:layout_marginTop="0.25dp"
                    android:layout_marginLeft="0.25dp"

                    android:paddingLeft="15dp" />
            </TableRow>


            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80px"
                android:gravity="center_horizontal"

                android:background="@color/border"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Note"
                    android:textSize="15sp"
                    android:textColor="@color/tabletext"
                    android:background="#FFFFFF"
                    android:layout_marginTop="0.25dp"
                    android:layout_marginRight="0.25dp"
                    android:layout_marginBottom="0.5dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:id="@+id/Description"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginTop="0.25dp"
                    android:layout_marginLeft="0.25dp"
                    android:paddingLeft="15dp" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80px"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Save"
                    android:id="@+id/button"
                    android:textColor="@android:color/white"
                    android:background="@drawable/flat_selector"

                    android:onClick="updatetransaction"

                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Add"
                    android:onClick="setExpenseDate"

                    android:textColor="@android:color/white"
                    android:background="@drawable/flat_selector"
                    android:id="@+id/button2"
                    android:layout_marginRight="10dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Delete"
                    android:onClick="deletetransaction"

                    android:id="@+id/button3"
                    android:textColor="@android:color/white"
                    android:background="@drawable/flat_selector"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp" />
            </TableRow>
        </TableLayout>




    </RelativeLayout>

</ScrollView>
